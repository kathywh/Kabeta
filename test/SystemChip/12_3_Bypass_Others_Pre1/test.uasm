.include ../../../tools/kabeta.uasm

||====================================================================================||
||                                 User Data Segment                                  ||
||====================================================================================||
LOCATE(0x0800)
data:
	STORAGE(1)

||====================================================================================||
||                                 Exception  Vectors                                 ||
||====================================================================================||
EXCVT()

rst_vec:
	BR(start)
svc_vec:
	BR(.)
ill_vec:
	BR(.)
inv_op_vec:
	BR(.)
inv_da_vec:
	BR(.)
inv_ia_vec:
	BR(.)
irq_vec:
	BR(.)
urq_vec:
	BR(.)

||====================================================================================||
||                              Supervisor Code Segment                               ||
||====================================================================================||
LOCATE(0x0080)

start:
	| Switch to User Mode
	MOVC(user_start%PC_MASK, R0)
	JMP(R0)

||====================================================================================||
||                                  User Code Segment                                 ||
||====================================================================================||
LOCATE(0x0800)
user_start:

	MOVC(0x5A03, R0)
	ST(R0, data)	
	MOVC(0x5A00, R21)
	MOVC(1, R22)	

	|--------------------------------
	| Bypass from MA-Stage, preceding by 1 instruction

	ADD(R21, R22, R1)
	MOV(R1, R2)

	ADDC(R21, 2, R1)
	MOV(R1, R2)

	BEQ(R22, end, R1)	| BEQ: 0x824 = 0x800+0x24
	MOV(R1, R2)

	BNE(R31, end, R1)	| BNE: 0x82C = 0x800+0x2C
	MOV(R1, R2)

end:
	BR(.)

||====================================================================================||
||                               User Literal  Segment                                ||
||====================================================================================||
LITERAL()

literal:
	LONG(0x5A04)

|--------------------------------------|
| Program Signature                    |
|--------------------------------------|
LOCATE(0x0FFC)
__signature:
	LONG(0xCA3EBE3A)