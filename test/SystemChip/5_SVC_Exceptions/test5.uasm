.include ../../../tools/kabeta.uasm

|--------------------------------------
| data segment
|--------------------------------------
__DATA(0)

| stack
stack:
	STORAGE(256)

|--------------------------------------
| exception vectors
|--------------------------------------
__EXC()

rst_vec:
	BR(start)
svc_vec:
	BR(svc_esr)
ill_vec:
	BR(.)
inv_op_vec:
	BR(.)
inv_da_vec:
	BR(.)
inv_ia_vec:
	BR(.)
irq0_vec:
	BR(.)
irq1_vec:
	BR(.)

|--------------------------------------
| code segment
|--------------------------------------
__CODE(0x20)

	| SVC Handler
	|   Input:  R0
	|   Output: R1 <= R0 .OR. 0x80000000
svc_esr:
	PUSH(XP)
	PUSH(R1)
	MOVC(1, R1)
	SHLC(R1, 31, R1)
	OR(R0, R1, R0)
	POP(R1)
	POP(XP)
	JMP(XP)

	| Reset vector jump here
start:

	| Set SP
	MOVC(stack, SP)

	| SVC in Supervisor Mode
	MOVC(0x3CBA, R0)
	SVC()

	| Here R0 shoud be 0x80003CBA
	MOV(R0, R20)

	| Switch to User Mode
	MOVC(user_mode%PC_MASK, R0)
	JMP(R0)
user_mode:

	MOVC(0x59C2, R1)
	MOVC(0x59C3, R2)
	MOVC(0x59C4, R3)

	| SVC in User Mode
	MOVC(0x1234, R0)
	SVC()

	| Here R0 shoud be 0x80001234
	MOV(R0, R21)

end:
	BR(.)
