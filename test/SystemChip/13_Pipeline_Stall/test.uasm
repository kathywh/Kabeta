.include ../../../tools/kabeta.uasm

|--------------------------------------
| data segment
|--------------------------------------
__DATA(0)
data:
	LONG()

|--------------------------------------
| exception vectors
|--------------------------------------
__EXC()

rst_vec:
	BR(start)
svc_vec:
	BR(.)
ill_vec:
	BR(.)
inv_op_vec:
	BR(.)
inv_da_vec:
	BR(.)
inv_ia_vec:
	BR(.)
irq0_vec:
	BR(.)
irq1_vec:
	BR(.)

|--------------------------------------
| code segment
|--------------------------------------
__CODE(0x20)

start:
	| Switch to User Mode
	MOVC(user_mode%PC_MASK, R0)		| 0x20
	JMP(R0)							| 0x24
user_mode:

	MOVC(0x5A03, R0)				| 0x28
	ST(R0, data)					| 0x2C
	MOVC(0x5A00, R21)				| 0x30
	MOVC(1, R22)					| 0x34

	|--------------------------------
	| Bypass from WB-Stage, preceding by 2 instructions

	LD(data, R1)		| LD: 0x5A03
	MOV(R1, R2)

	LDR(literal, R1)	| LDR: 0x5A04
	MOV(R1, R2)

end:
	BR(.)

|--------------------------------------
| literal segment
|--------------------------------------
__LITERAL()

literal:
	LONG(0x5A04)