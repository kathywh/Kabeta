.include ../../../tools/kabeta.uasm

||====================================================================================||
||                                    Data Segment                                    ||
||====================================================================================||
LOCATE(0)

| Stack
stack:
	STORAGE(256)

||====================================================================================||
||                                 Exception  Vectors                                 ||
||====================================================================================||
EXCVT()

rst_vec:
	BR(start)
svc_vec:
	BR(.)
ill_vec:
	BR(.)
inv_op_vec:
	BR(.)
inv_da_vec:
	BR(.)
inv_ia_vec:
	BR(.)
irq_vec:
	BR(.)
urq_vec:
	BR(.)

||====================================================================================||
||                                    Code Segment                                    ||
||====================================================================================||
LOCATE(0x100)

start:

	| Set SP
	MOVC(stack, SP)

	BR(target)		| Branch instruction
	LONG(0)			| Illegal instruction in branch delay slot #1
	LONG(0)			| Illegal instruction in branch delay slot #2
	MOVC(0x81, R1)
	MOVC(0x82, R2)

target:
	MOVC(0xA3, R3)
	BR(.)

||====================================================================================||
||                                  Literal  Segment                                  ||
||====================================================================================||

|--------------------------------------|
| Program Signature                    |
|--------------------------------------|
LOCATE(0x0FFC)
__signature:
	LONG(0xCA3EBE3A)