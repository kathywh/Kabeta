.include ../../../tools/kabeta.uasm

||============================================================================||
||                             User Data Segment                              ||
||============================================================================||
LOCATE(0x0800)

| Stack
stack:
	STORAGE(256)

| Data
data:
	STORAGE(1)

||============================================================================||
||                             Exception  Vectors                             ||
||============================================================================||
EXCVT()

rst_vec:
	BR(start)
svc_vec:
	BR(.)
ill_vec:
	BR(.)
inv_op_vec:
	BR(.)
inv_da_vec:
	BR(.)
inv_ia_vec:
	BR(.)
irq_vec:
	BR(irq_esr)
urq_vec:
	BR(.)

||============================================================================||
||                          Supervisor Code Segment                           ||
||============================================================================||
LOCATE(0x0080)

	|----------------------------------------------------------------------|
	| IRQ Handler                                                          |
	|----------------------------------------------------------------------|

irq_esr:
	| Adjust XP
	SUBC(XP, 4, XP)

	| Save registers
	PUSH(R0)
	PUSH(R1)
	PUSH(R2)

	| Process interrupt
	MOVC(0x90, R0)
	MOVC(0x91, R1)
	MOVC(0x92, R2)

irq_end:
	| Restore registers
	POP(R2)
	POP(R1)
	POP(R0)

	| Return
	JMP(XP)

	|----------------------------------------------------------------------|
	| System initialization                                                |
	|----------------------------------------------------------------------|

start:

	| Set SP
	MOVC(stack, SP)

	| Switch to User Mode
	MOVC(user_start%PC_MASK, R0)
	JMP(R0)

||============================================================================||
||                              User Code Segment                             ||
||============================================================================||
LOCATE(0x0800)
user_start:

	|----------------------------------------------------------------------|
	| Main loop                                                            |
	|----------------------------------------------------------------------|
main_loop:
	
	| Main loop body
	MOVC(0x20, R0)
	MOVC(0x21, R1)
	LD(data, R2)
	ADDC(R2, 0, R31)
	MOVC(0xF0, R0)
	MOVC(0xF1, R1)

	BR(main_loop)

||============================================================================||
||                           User Literal  Segment                            ||
||============================================================================||
LITERAL()

    |----------------------------------------------------------------------|
    | Program Signature                                                    |
    |----------------------------------------------------------------------|
LOCATE(0x0FFC)
__signature:
	LONG(0xCA3EBE3A)