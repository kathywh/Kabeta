.include ../../../tools/kabeta.uasm

||============================================================================||
||                             User Data Segment                              ||
||============================================================================||
LOCATE(0x0800)

| Stack
stack:
	STORAGE(256)

||============================================================================||
||                             Exception  Vectors                             ||
||============================================================================||
EXCVT()

rst_vec:
	BR(start)
svc_vec:
	BR(.)
ill_vec:
	BR(.)
inv_op_vec:
	BR(.)
inv_da_vec:
	BR(.)
inv_ia_vec:
	BR(.)
irq_vec:
	BR(.)
urq_vec:
	BR(.)

||============================================================================||
||                          Supervisor Code Segment                           ||
||============================================================================||
LOCATE(0x0080)

start:

	| Set SP
	MOVC(stack, SP)

	BR(br_i)
	NOP()
	NOP()

target:
	MOVC(0xA3, R3)
	BR(.)

LOCATE(0x0FFC)

br_i:
	BR(target)			| Branch instruction at last word of IM
						| branch delay slots are out of IM address range