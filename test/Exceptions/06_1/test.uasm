.include ../../../tools/kabeta.uasm

||============================================================================||
||                             User Data Segment                              ||
||============================================================================||
LOCATE(0x0800)

| Stack
stack:
	STORAGE(256)

| Data
data:
	STORAGE(1)

||============================================================================||
||                             Exception  Vectors                             ||
||============================================================================||
EXCVT()

rst_vec:
	BR(start)
svc_vec:
	BR(.)
ill_vec:
	BR(.)
inv_op_vec:
	BR(.)
inv_da_vec:
	BR(.)
inv_ia_vec:
	BR(.)
irq_vec:
	BR(.)
urq_vec:
	BR(.)

||============================================================================||
||                          Supervisor Code Segment                           ||
||============================================================================||
LOCATE(0x0080)

start:

	| Set SP
	MOVC(stack, SP)

	| Switch to User Mode
	MOVC(user_start%PC_MASK, R0)
	JMP(R0)

||============================================================================||
||                              User Code Segment                             ||
||============================================================================||
LOCATE(0x0800)
user_start:
	NOP()
	NOP()
	MOVC(0, R0)
	ST(R0, data)
	LD(data, R0)
	BEQ(R0, target)
	MOVC(0x01, R1)
	MOVC(0x02, R2)
	MOVC(0x03, R3)
target:
	MOVC(0xA1, R1)
	MOVC(0xA2, R2)
	MOVC(0xA3, R3)
	BR(.)

||============================================================================||
||                           User Literal  Segment                            ||
||============================================================================||
LITERAL()

    |----------------------------------------------------------------------|
    | Program Signature                                                    |
    |----------------------------------------------------------------------|
LOCATE(0x0FFC)
__signature:
	LONG(0xCA3EBE3A)