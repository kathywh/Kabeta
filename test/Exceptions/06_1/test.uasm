.include ../../../tools/kabeta.uasm

||====================================================================================||
||                                    Data Segment                                    ||
||====================================================================================||
LOCATE(0)

| Stack
stack:
	STORAGE(256)

||====================================================================================||
||                                 Exception  Vectors                                 ||
||====================================================================================||
EXCVT()

rst_vec:
	BR(start)
svc_vec:
	BR(.)
ill_vec:
	BR(.)
inv_op_vec:
	BR(.)
inv_da_vec:
	BR(.)
inv_ia_vec:
	BR(.)
irq_vec:
	BR(.)
urq_vec:
	BR(.)

||====================================================================================||
||                                    Code Segment                                    ||
||====================================================================================||
LOCATE(0x100)

start:

	| Set SP
	MOVC(stack, SP)

	| Switch to User Mode
	MOVC(user_mode%PC_MASK, R0)
	JMP(R0)
user_mode:
	NOP()
	NOP()
	MOVC(0, R0)
	ST(R0, 0xA0)
	LD(0xA0, R0)
	BEQ(R0, target)
	MOVC(0x01, R1)
	MOVC(0x02, R2)
	MOVC(0x03, R3)
target:
	MOVC(0xA1, R1)
	MOVC(0xA2, R2)
	MOVC(0xA3, R3)
	BR(.)

||====================================================================================||
||                                  Literal  Segment                                  ||
||====================================================================================||

|--------------------------------------|
| Program Signature                    |
|--------------------------------------|
LOCATE(0x0FFC)
__signature:
	LONG(0xCA3EBE3A)